<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/activitymane_ob_back"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/hebrow_alfa"
        android:text="@string/enter_tz"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tzreciver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_shapee"
            android:ems="10"
            android:fontFamily="@font/hebrow_alfa"
            android:hint="@string/qr_bytz_hint"
            android:inputType="number|textPersonName"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/nextbtn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/edit_text_shapee"
            android:fontFamily="@font/hebrow_alfa"
            android:src="@drawable/next_icon_b" />
    </LinearLayout>

</LinearLayout>